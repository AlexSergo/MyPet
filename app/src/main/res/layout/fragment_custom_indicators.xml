<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.CustomIndicatorsFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="150dp"
        tools:src="@drawable/img" />

    <TextView
        android:id="@+id/name_of_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="173dp"
        android:layout_marginRight="100dp"
        android:gravity="center"
        android:text="@string/name" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="316dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="240dp"
        android:layout_marginRight="20dp"
        android:background="@color/color_hint"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="282dp"
        android:layout_marginStart="51dp"
        android:text="@string/temperature"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="282dp"
        android:layout_marginStart="300dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="339dp"
        android:layout_marginStart="51dp"
        android:text="@string/pressure"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="339dp"
        android:layout_marginStart="300dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="396dp"
        android:layout_marginStart="51dp"
        android:text="@string/heart_rate"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/heart_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="396dp"
        android:layout_marginStart="300dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="453dp"
        android:layout_marginStart="51dp"
        android:text="@string/breathing_rate"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/breathing_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="453dp"
        android:layout_marginStart="300dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/button_more_data"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="530dp"
        android:backgroundTint="@color/active_button"
        android:text="показать больше данных"
        android:textSize="12sp" />

</FrameLayout>